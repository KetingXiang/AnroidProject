<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/DetailTopLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="#39D1DF"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/Shop_details_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="10dp"
            android:src="@drawable/detail_ic_back" />

        <ImageView
            android:id="@+id/Shop_details_off"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingLeft="5dp"
            android:paddingRight="10dp"
            android:src="@drawable/detail_ic_favorite_off" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/DetailTopLayout"
        android:background="#F4F4F4" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:orientation="vertical"
                android:padding="0dp" >

                <TextView
                    android:id="@+id/DetailName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="3dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="13dp"
                    android:maxLines="1"
                    android:text="大学城一日游"
                    android:textColor="#000000"
                    android:textSize="22sp"
                    android:background="#39D1Df"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="7dp" >

                    <ImageView
                        android:id="@+id/DetailPhotos"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="3dp"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        android:paddingBottom="11dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="9dp"
                        android:src="@drawable/detail_ic_photo"
                        android:contentDescription=""/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingBottom="15dp"
                        android:paddingLeft="10dp"
                        android:paddingTop="15dp"
                        android:gravity="center_vertical">

                        <RatingBar
                            android:id="@+id/DetailRateBar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/Widget.AppCompat.RatingBar.Small"
                            android:numStars="5"
                            android:rating="1.5"
                            android:isIndicator="true"/>

                        <TextView
                            android:id="@+id/DetailTextView1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="人均价格: ¥"
                            android:textColor="#666666"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/DetailPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBaseline="@id/DetailTextView1"
                            android:layout_toEndOf="@id/DetailTextView1"
                            android:text="350"
                            android:textColor="#666666"
                            android:textSize="15sp" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
            <!-- 、、、、、、、、、、、、、、、、、、、、、、、、、、、、、、、、、、、、 -->

            <RelativeLayout
                android:id="@+id/shop_details_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="7dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/detail_ic_introduction"
                    android:id="@+id/DetailIcIntroduction"/>
                <TextView
                    android:id="@+id/DetailTextView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="13dp"
                    android:paddingTop="13dp"
                    android:text="详细介绍："
                    android:textSize="16sp"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@id/DetailIcIntroduction" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/DetailTextView2"
                    android:layout_below="@id/DetailTextView2"
                    android:text="暂无详细信息"/>



            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="7dp">
                <TextView
                    android:id="@+id/DetailTextView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="网友点评"
                    android:textSize="16dp"
                    android:layout_alignParentTop="true"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:layout_below="@id/DetailTextView3"
                    android:id="@+id/DetailLayout2">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/DetailCommentPersonHead"
                            android:src="@mipmap/ic_launcher"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/DetailCommentPersonUsername"
                            android:text="安卓"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="评价内容:"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/DetailCommentText"
                            android:text="无"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/DetailLayout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentBottom="true"
                    android:gravity="center_vertical"
                    android:layout_below="@id/DetailLayout2">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="查看全部点评"
                        android:textSize="16dp"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/detail_ic_more"/>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>