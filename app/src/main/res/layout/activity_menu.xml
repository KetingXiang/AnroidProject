<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/menu_main_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.smie.project.MenuActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/menu_main_title">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/menu_main_back"
            android:src="@drawable/menu_main_back"
            android:layout_alignParentLeft="true"
            android:layout_margin="10dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/menu_main_find"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"/>
    </RelativeLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"
        android:layout_below="@id/menu_main_title"
        android:id="@+id/menu_between_title_and_sort"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/menu_main_sort"
        android:layout_below="@+id/menu_between_title_and_sort">
        <TextView
            android:text="@string/menu_main_title_by_place"
            style="@style/menu_main_sort"
            />
        <Button
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:background="@color/gray"/>
        <TextView
            android:text="@string/menu_main_title_price"
            style="@style/menu_main_sort"
            />
        <Button
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:background="@color/gray"/>
        <TextView
            android:text="@string/menu_main_evaluate"
            style="@style/menu_main_sort"
            />
        <Button
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:background="@color/gray"/>
        <TextView
            android:text="@string/menu_main_sort_more"
            style="@style/menu_main_sort"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/menu_main_unfold"
            android:layout_gravity="center|start"
            />
    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"
        android:layout_below="@id/menu_main_sort"
        android:id="@+id/menu_between_sort_and_list"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="10dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/menu_main_change_state"

        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="信息"
            android:textSize="20sp"
            android:layout_alignParentLeft="true"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:src="@drawable/menu_main_person_center"
            android:layout_centerInParent="true"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="信息"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/button" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/menu_between_sort_and_list"
        android:layout_above="@id/menu_main_change_state">
        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/menu_between_sort_and_list"
            android:id="@+id/menu_main_listview"
            >
        </ListView>
    </LinearLayout>




</RelativeLayout>